<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:onClick="addAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:focusable="true"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/titreMission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de la Mission"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/nomChauffeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du chaffeur reponsable"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/adresseFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse de fin de mission"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/vId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:inputType="number"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/mId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:inputType="number"
                android:textSize="18sp"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>