<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.VehiculeView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/grad"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/titre"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="le titre du vehicule"
            android:textStyle="bold"
            android:textSize="30dp">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rellay1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de vehicule"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type de vehicule"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etat du vehiculee"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/etat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="etat du vehicule"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission"
                android:textColor="@color/headings"
                android:textSize="13sp" />RelativeLayout

            <TextView
                android:id="@+id/occupe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="le vehicule occupé par"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chauffeur"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/occupe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="le vehicule occupé par"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matricule du vehicule"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/annee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="l'annee de mise en serculation du vehicule"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de place"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/nbr_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de place"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consomation de carburant"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/consomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consomation de carburant"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometrage du vehicule"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/kilometrage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kilometrage"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controle technique"
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dateLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date fin du controle technique du vehicule"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>


        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_gravity="center"
            android:id="@+id/Delete"
            app:backgroundTint="@null"
            />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier"
            android:textColor="@android:color/white"
            app:backgroundTint="@null"
            android:background="@drawable/grad"
            android:layout_gravity="center"
            android:id="@+id/Update"
            />

    </LinearLayout>
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>